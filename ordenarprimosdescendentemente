#include <iostream>
#include <conio.h>
#define N 10

using namespace std;

struct elemento
{int V[N];
};

void cargar(elemento vector[],int n)
{int i,j;
for(i=0;i<n;i++)
{for(j=0;j<n;j++)
{cout<<"Ingrese un valor: ";
cin>>vector[i].V[j];
}
}
}

void mostrar(elemento vector[],int n)
{int i,j;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
{cout<<vector[i].V[j] <<" ";
}
cout<<"  ";
}
}

void eliminarimpares(elemento vector[],int n)
{int i,j,aux[N],aux2,tam=0;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{if((vector[i].V[j]%2!=0))
		  {    if(tam==0)
				  {aux[tam]=vector[i].V[j];
				  tam++;
				  vector[i].V[j]=-1;
				  }
			else
			{if(vector[i].V[j]>=aux[tam-1])
				{aux[tam]=vector[i].V[j];
					tam++;
					vector[i].V[j]=-1;
				}
			}
		  }
	 }
}
for(i=0;i<tam/2;i++)
{aux2=aux[i];
aux[i]=aux[n-1-i];
aux[n-1-i]=aux2;
}
tam=0;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
		{if(vector[i].V[j]==-1)
			{vector[i].V[j]=aux[tam];
			tam++;
			}
	    }
   }
mostrar(vector,n);
}





void main()
{elemento vector[N];
int n;
cout<<"Ingrese el tamaÃ±o del vector: ";
cin>>n;
cargar(vector,n);
mostrar(vector,n);
eliminarimpares(vector,n);

getch();
}
