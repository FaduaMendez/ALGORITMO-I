#include <conio.h>
#include <iostream>
#define TAM 100

using namespace std;

void cargar(int vec[],int n)
{ int i;
for(i=0; i<n;i++)
{cout<<"Ingrese un valor: ";
 cin>>vec[i];
}
getch();
}
void mostrar (int vec[], int n)
{ int i;
for(i=0;i<n;i++)
{cout<<vec[i];
}
getch();
}


void main()
{ int vec[TAM],n;
 cout<<"Ingrese el tamaÃ±o del vector: ";
 cin>>n;
 cargar(vec,n);
 mostrar(vec,n);
 getch();
}
