#include <iostream>
#include <conio.h>
#define TAM 100

using namespace std;

struct elemento
{ int vec[TAM];
};

void cargar (elemento vect[], int n)
{int i, j;
for(i=0;i<n;i++)
  {for(j=0;j<n;j++)
{cout<<"INGRESE UN VALOR: ["<<i<<"].["<<j<<"]";
 cin>>vect[i].vec[j];
}
}
}

int sumadefinales(elemento vect[],int n)
{int i,j,s=0,l=0;
 
for(i=1;i<n;i++)
	{for(j=(n-1);j>=(i);j--)
	  {s=s+vect[i].vec[j];
}
l=l+s;
s=0;
}
return l;
}




void main()
{elemento vect[TAM];
 int n;
 cout<<"Ingrese el tamaÃ±o del vector: ";
 cin>>n;
 cargar(vect,n);
 cout<<"La suma es: "<<sumadefinales(vect,n);
 getch();
}
