#include <iostream>
#include <conio.h>
#include <string.h>
#include "stdlib.h"
#define N 10

using namespace std;
struct palabra{
	char cad[N];
};
struct elemento{
palabra V[N];

};


void cargar(elemento vector[],int n)
{
	int i,j;
	for(i=0;i<n;i++)
	{	
		for(j=0;j<n;j++)
		{
			cout<<"Ingrese una cadena: ";
			gets(vector[i].V[j].cad);
		}
	}
}

void cargarlamatriz(elemento vector[],int n,elemento M[N][N])
{int i,j,k;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
        {for(k=0;k<n;k++)
		{strcpy(M[i][j].V[k].cad,vector[i].V[j].cad);
        }
}
}
}

void mostrarmatriz(elemento matriz[N][N],int n)
{int i,j,k;
for(i=0;i<n;i++)
	{for(j=0;j<n;j++)
{for(k=0;k<n;k++)
	{cout<<matriz[i][j].V[k].cad<<" ";
	}
cout<<" ";
}
cout<<endl;
}

}

void main()
{elemento vector[N],matriz[N][N];
int n;
cout<<"Ingrese el tamÃ±o del vector: ";
cin>>n;
fflush(stdin);
cargar(vector,n);
cargarlamatriz(vector,n,matriz);
mostrarmatriz(matriz,n);
getch();
}
